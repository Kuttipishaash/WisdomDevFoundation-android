<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22313F"
    android:orientation="vertical">



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/about_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/about_logo"
                android:layout_width="250dp"
                android:layout_height="190dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wisdom_about" />

            <TextView
                android:id="@+id/text_about_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:textColor="@color/md_white_1000"
                android:text="Â© 2018 Wisdom Development Foundation"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_layout_about_developers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="13dp"
                    android:padding="5dp"
                    android:textColor="@color/md_white_1000"
                    android:text="E-Mail:"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:autoLink="email"
                    android:textColor="@color/md_white_1000"
                    android:text="info@wisdomintiatives.org" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_about_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:padding="5dp"
                    android:textColor="@color/md_white_1000"
                    android:text="Contact:"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:text="+91 952691 0507" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout_about_webpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:padding="5dp"
                    android:textColor="@color/md_white_1000"
                    android:text="Website:"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:text="wisdominitiatives.org" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_layout_about_data_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:padding="5dp"
                    android:text="Who we are ?"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:text="WISDOM DEVELOPMENT FOUNDATION is based in Kochi working for the development of the society in grass root level. " />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:padding="5dp"
                android:textColor="@color/md_white_1000"
                android:text="An App Developed by:"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/md_white_1000"
                android:text="Prejith, Prabhashankar, Mebin &amp; Pranav"/>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>